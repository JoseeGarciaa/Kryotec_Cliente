<% title = 'Inventario' %>

<div class="mb-2">
  <p class="text-sm opacity-70">Gestión de credocubes y componentes RFID</p>
  <form method="get" action="/inventario" class="mt-2">
    <div class="form-control">
      <label class="input input-bordered flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="opacity-70"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.3-4.3"></path></svg>
        <input type="search" class="grow" placeholder="Buscar por nombre, RFID, lote o estado..." name="q" value="<%= q || '' %>" maxlength="24" />
      </label>
    </div>
    <div class="text-xs opacity-60 mt-1">0/24 caracteres</div>
    <div class="mt-3 flex flex-wrap gap-2">
      <a class="btn btn-sm <%= !cat ? 'btn-primary' : '' %>" href="/inventario<%= q ? ('?q='+encodeURIComponent(q)) : '' %>">Todos (<%= counts?.total || 0 %>)</a>
      <a class="btn btn-sm <%= cat==='cubes' ? 'btn-primary' : '' %>" href="/inventario?cat=cubes<%= q ? ('&q='+encodeURIComponent(q)) : '' %>">Cubes (<%= counts?.cubes || 0 %>)</a>
      <a class="btn btn-sm <%= cat==='vips' ? 'btn-primary' : '' %>" href="/inventario?cat=vips<%= q ? ('&q='+encodeURIComponent(q)) : '' %>">VIPs (<%= counts?.vips || 0 %>)</a>
      <a class="btn btn-sm <%= cat==='tics' ? 'btn-primary' : '' %>" href="/inventario?cat=tics<%= q ? ('&q='+encodeURIComponent(q)) : '' %>">TICs (<%= counts?.tics || 0 %>)</a>
    </div>
    <div class="mt-3 flex flex-wrap items-center gap-2">
      <label class="label text-xs opacity-70">Estado:</label>
      <div class="join">
        <a class="btn btn-xs join-item <%= !state ? 'btn-primary' : '' %>" href="/inventario<%= q?('?q='+encodeURIComponent(q)) : '' %><%= cat?((q?'&':'?')+'cat='+encodeURIComponent(cat)) : '' %>">Todos</a>
        <a class="btn btn-xs join-item <%= state==='inhabilitado' ? 'btn-primary' : '' %>" href="/inventario?<%= q?('q='+encodeURIComponent(q)+'&') : '' %><%= cat?('cat='+encodeURIComponent(cat)+'&') : '' %>state=inhabilitado">Inhabilitado</a>
      </div>
    </div>
  </form>
</div>

<div class="card bg-base-200 shadow-lg transition-all hover:shadow-xl">
  <div class="card-body animate-slide-up">
    <div class="overflow-x-auto">
      <table class="table table-zebra">
        <thead>
          <tr>
            <th>NOMBRE UNIDAD</th>
            <th>MODELO ID</th>
            <th>RFID</th>
            <th>LOTE</th>
            <th>ESTADO</th>
            <th>SUB-ESTADO</th>
            <th>CATEGORÍA</th>
            <th>ÚLTIMA ACTUALIZACIÓN</th>
            <th>ACCIONES</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(i => { %>
            <tr>
              <td><%= i.nombre_unidad %></td>
              <td><%= i.modelo_id %></td>
              <td><%= i.rfid %></td>
              <td class="whitespace-nowrap"><%= i.lote || '' %></td>
              <td class="whitespace-nowrap"><div class="badge badge-primary badge-outline hover:badge-secondary transition-colors whitespace-nowrap"><%= i.estado %></div></td>
              <td class="whitespace-nowrap"><% if (i.sub_estado) { %><div class="badge badge-outline whitespace-nowrap"><%= i.sub_estado %></div><% } else { %><span class="opacity-60">—</span><% } %></td>
              <td><%= i.categoria %></td>
              <td><%= new Date(i.ultima_actualizacion).toLocaleString() %></td>
              <td class="whitespace-nowrap">
                <div class="join">
                  <!-- Editar -->
                  <button type="button" class="btn btn-ghost btn-xs join-item" title="Editar" aria-label="Editar"
                          data-action="inv-edit"
                          data-id="<%= i.id %>"
                          data-nombre="<%- (i.nombre_unidad||'').replace(/\"/g,'&quot;') %>"
                          data-lote="<%- (i.lote||'').replace(/\"/g,'&quot;') %>"
                          data-estado="<%- (i.estado||'').replace(/\"/g,'&quot;') %>"
                          data-sub="<%- (i.sub_estado||'').replace(/\"/g,'&quot;') %>">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M12 20h9"/>
                      <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4 12.5-12.5z"/>
                    </svg>
                    <span class="sr-only">Editar</span>
                  </button>
                  <!-- Inspeccionar -->
                  <a class="btn btn-ghost btn-xs join-item" title="Inspeccionar" aria-label="Inspeccionar" href="/operacion/inspeccion">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7-11-7-11-7z"/>
                      <circle cx="12" cy="12" r="3"/>
                    </svg>
                    <span class="sr-only">Inspeccionar</span>
                  </a>
                  <!-- Eliminar -->
                  <form method="post" action="/inventario/<%= i.id %>/delete" onsubmit="return confirm('¿Eliminar este item?');" class="join-item">
                    <button class="btn btn-ghost btn-xs text-error" title="Eliminar" aria-label="Eliminar">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="3 6 5 6 21 6"/>
                        <path d="M19 6l-1 14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2L5 6"/>
                        <path d="M10 11v6"/>
                        <path d="M14 11v6"/>
                        <path d="M9 6V4a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v2"/>
                      </svg>
                      <span class="sr-only">Eliminar</span>
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <div class="mt-3 flex items-center justify-between text-xs">
      <div>Mostrando <%= items.length %> de <%= total %> resultados</div>
      <div class="join">
        <% const prevPage = Math.max(1, (page||1)-1); const nextPage = Math.min(pages||1, (page||1)+1); %>
        <a class="btn btn-xs join-item" href="/inventario?<%= q?('q='+encodeURIComponent(q)+'&') : '' %><%= cat?('cat='+encodeURIComponent(cat)+'&') : '' %><%= state?('state='+encodeURIComponent(state)+'&') : '' %>page=<%= prevPage %>&limit=<%= limit %>">«</a>
        <% for (let p=1; p<=pages; p++){ %>
          <a class="btn btn-xs join-item <%= (p===(page||1))? 'btn-primary' : '' %>" href="/inventario?<%= q?('q='+encodeURIComponent(q)+'&') : '' %><%= cat?('cat='+encodeURIComponent(cat)+'&') : '' %><%= state?('state='+encodeURIComponent(state)+'&') : '' %>page=<%= p %>&limit=<%= limit %>"><%= p %></a>
        <% } %>
        <a class="btn btn-xs join-item" href="/inventario?<%= q?('q='+encodeURIComponent(q)+'&') : '' %><%= cat?('cat='+encodeURIComponent(cat)+'&') : '' %><%= state?('state='+encodeURIComponent(state)+'&') : '' %>page=<%= nextPage %>&limit=<%= limit %>">»</a>
      </div>
    </div>
  </div>
</div>

<!-- Modal: Editar item inventario -->
<dialog id="inv-edit-modal" class="modal">
  <div class="modal-box max-w-lg">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
    </form>
    <h3 class="font-bold text-lg mb-2">Editar item</h3>
    <form id="inv-edit-form" method="post" action="/inventario/0/update" class="space-y-3">
      <div class="grid grid-cols-2 gap-3">
        <label class="form-control">
          <span class="label-text text-xs opacity-70">Nombre unidad</span>
          <input id="inv-edit-nombre" name="nombre_unidad" type="text" class="input input-sm input-bordered" />
        </label>
        <label class="form-control">
          <span class="label-text text-xs opacity-70">Lote</span>
          <input id="inv-edit-lote" name="lote" type="text" class="input input-sm input-bordered" />
        </label>
      </div>
      <div class="grid grid-cols-2 gap-3">
        <label class="form-control">
          <span class="label-text text-xs opacity-70">Estado</span>
          <input id="inv-edit-estado" name="estado" type="text" class="input input-sm input-bordered" />
        </label>
        <label class="form-control">
          <span class="label-text text-xs opacity-70">Sub-estado</span>
          <input id="inv-edit-sub" name="sub_estado" type="text" class="input input-sm input-bordered" />
        </label>
      </div>
      <div class="flex items-center justify-between mt-2">
        <span id="inv-edit-msg" class="text-xs opacity-70"></span>
        <div class="join">
          <button type="button" class="btn btn-ghost btn-sm join-item" onclick="document.getElementById('inv-edit-modal').close()">Cancelar</button>
          <button type="submit" class="btn btn-primary btn-sm join-item">Guardar</button>
        </div>
      </div>
    </form>
  </div>
  <form method="dialog" class="modal-backdrop"><button>close</button></form>
</dialog>

<script>
  (function(){
    const modal = document.getElementById('inv-edit-modal');
    const form = document.getElementById('inv-edit-form');
    const fNombre = document.getElementById('inv-edit-nombre');
    const fLote = document.getElementById('inv-edit-lote');
    const fEstado = document.getElementById('inv-edit-estado');
    const fSub = document.getElementById('inv-edit-sub');
    document.addEventListener('click', (e)=>{
      const t = e.target;
      if(!(t instanceof HTMLElement)) return;
      if(t.matches('[data-action="inv-edit"]')){
        const id = t.getAttribute('data-id');
        const nombre = t.getAttribute('data-nombre')||'';
        const lote = t.getAttribute('data-lote')||'';
        const estado = t.getAttribute('data-estado')||'';
        const sub = t.getAttribute('data-sub')||'';
        if(form){ form.action = `/inventario/${id}/update`; }
        if(fNombre) fNombre.value = nombre;
        if(fLote) fLote.value = lote;
        if(fEstado) fEstado.value = estado;
        if(fSub) fSub.value = sub;
        try{ modal.showModal(); }catch{ modal.classList.remove('hidden'); }
      }
    });
  })();
</script>
