<% title = title || 'Operación · Operación' %>
<div class="mb-6">
  <h1 class="text-2xl font-bold">Gestión de Operación</h1>
</div>

<!-- Bloque: Tránsito / Recepción de Caja -->
<div class="card border border-info/20 bg-info/5 mb-8">
  <div class="card-body p-0">
    <div class="flex items-center justify-between px-5 pt-4 pb-3 flex-wrap gap-3">
      <div>
        <div class="font-semibold text-lg flex items-center gap-2">Caja en Tránsito <span id="op-spin" class="loading loading-spinner loading-xs hidden"></span></div>
        <div id="op-count" class="text-sm opacity-70">(0)</div>
      </div>
      <div class="flex gap-2 items-center">
        <button id="op-btn-timer-start" class="btn btn-primary btn-sm" disabled>Iniciar Timer</button>
        <button id="op-btn-timer-clear" class="btn btn-ghost btn-sm" disabled>Pausar</button>
        <button id="op-btn-timer-complete" class="btn btn-success btn-sm" disabled>Completar</button>
      </div>
    </div>
    <div class="px-5 pb-4 flex flex-col gap-4 md:flex-row md:items-end">
      <label class="input input-bordered flex items-center gap-2 w-full md:max-w-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-70" viewBox="0 0 24 24" fill="currentColor"><path d="M10 2a8 8 0 105.293 14.293l4.207 4.207a1 1 0 001.414-1.414l-4.207-4.207A8 8 0 0010 2zm0 2a6 6 0 110 12A6 6 0 0110 4z"/></svg>
        <input id="op-scan" type="text" class="grow" placeholder="Escanear RFID (24) o código de caja ej. CAJA001-05092025" autocomplete="off" maxlength="32" />
      </label>
      <div class="flex gap-2">
        <button id="op-btn-lookup" class="btn btn-primary btn-sm">Buscar</button>
        <button id="op-btn-move" class="btn btn-accent btn-sm" disabled>Mover a Operación</button>
      </div>
      <div class="flex gap-2 text-xs items-center">
        <span class="opacity-60">Duración (min)</span>
        <input id="op-timer-min" type="number" min="1" step="1" value="30" class="input input-bordered input-xs w-20" />
        <span id="op-caja-timer" class="badge badge-neutral badge-xs">--</span>
      </div>
    </div>
    <div class="px-5 pb-4 text-xs grid sm:grid-cols-3 gap-4" id="op-meta">
      <div><span class="opacity-60">Caja:</span> <span id="op-caja-lote" class="font-mono"></span></div>
      <div><span class="opacity-60">ID:</span> <span id="op-caja-id" class="font-mono"></span></div>
      <div><span class="opacity-60">Estado:</span> <span id="op-caja-estado" class="font-semibold"></span></div>
    </div>
    <div class="overflow-x-auto border-t border-info/10">
      <table class="table table-xs sm:table-sm" id="op-table">
        <thead>
          <tr>
            <th>RFID</th>
            <th class="hidden md:table-cell">NOMBRE</th>
            <th class="hidden lg:table-cell">ESTADO</th>
            <th>ROL</th>
            <th>SUB-ESTADO</th>
          </tr>
        </thead>
        <tbody id="op-tbody">
          <tr><td colspan="5" class="text-center py-6 text-xs opacity-50">Sin datos</td></tr>
        </tbody>
      </table>
    </div>
    <div id="op-msg" class="px-5 py-3 text-xs opacity-80 min-h-[20px]"></div>
  </div>
</div>

<script src="/static/js/operacion.js?v=<%= assetVersion %>" defer></script>
