<% title = title || 'Operación · Operación' %>
<div class="mb-6">
  <h1 class="text-2xl font-bold">Gestión de Operación</h1>
</div>

<!-- Bloque: Cajas en Operación -->
<div class="card border border-info/20 bg-info/5 mb-8">
  <div class="card-body p-0">
    <div class="flex items-center justify-between px-5 pt-4 pb-3 flex-wrap gap-3">
      <div>
        <div class="font-semibold text-lg flex items-center gap-2">Cajas en Operación <span id="op-spin" class="loading loading-spinner loading-xs hidden"></span></div>
        <div id="op-count" class="text-sm opacity-70">(0 de 0)</div>
      </div>
      <div class="flex gap-3 items-center flex-wrap">
        <div class="flex bg-base-300/30 rounded-xl overflow-hidden">
          <button id="op-view-cards" type="button" class="btn btn-ghost btn-xs !rounded-none !rounded-l-xl" title="Vista tarjetas">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-4 h-4" fill="currentColor"><path d="M3 5h7v7H3V5zm0 9h7v5H3v-5zm11-9h7v5h-7V5zm0 7h7v7h-7v-7z"/></svg>
          </button>
          <button id="op-view-list" type="button" class="btn btn-ghost btn-xs !rounded-none !rounded-r-xl" title="Vista lista">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-4 h-4" fill="currentColor"><path d="M4 6h16v2H4V6zm0 5h16v2H4v-2zm0 5h10v2H4v-2z"/></svg>
          </button>
        </div>
        <button id="op-btn-add" class="btn btn-primary btn-sm" type="button">Agregar Items</button>
      </div>
    </div>
    <div class="px-5 pb-4">
      <label class="input input-bordered flex items-center gap-2 w-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-70" viewBox="0 0 24 24" fill="currentColor"><path d="M10 2a8 8 0 105.293 14.293l4.207 4.207a1 1 0 001.414-1.414l-4.207-4.207A8 8 0 0010 2zm0 2a6 6 0 110 12A6 6 0 0110 4z"/></svg>
        <input id="op-filter" type="text" class="grow" placeholder="Buscar por lote o RFID..." />
      </label>
    </div>
    <!-- Grid (tarjetas) -->
    <div id="op-grid-wrapper" class="px-5 pb-5 hidden">
      <div class="overflow-x-auto -mr-5 pb-1 custom-scroll">
        <div id="op-grid" class="grid grid-cols-2 xs:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3 sm:gap-4 min-w-[380px]"></div>
      </div>
    </div>
    <div id="op-table-wrapper" class="overflow-x-auto border-t border-info/10">
      <table class="table table-xs sm:table-sm" id="op-table">
        <thead>
          <tr>
            <th>RFID</th>
            <th class="hidden md:table-cell">NOMBRE</th>
            <th class="hidden lg:table-cell">ESTADO</th>
            <th>CAJA</th>
            <th>CRONÓMETRO</th>
          </tr>
        </thead>
        <tbody id="op-tbody">
          <tr><td colspan="5" class="text-center py-6 text-xs opacity-50">Cargando...</td></tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Modal Agregar a Operación (solo escanear y mover caja) -->
<dialog id="op-modal-add" class="modal">
  <div class="modal-box max-w-lg">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
    </form>
    <h3 class="font-bold text-lg mb-2">Mover caja a Operación</h3>
    <p class="text-xs opacity-70 mb-4">Escanea un RFID (o lote) de una caja en <strong>Lista para Despacho</strong>. Se listarán los items elegibles y podrás mover la caja completa.</p>
    <label class="input input-bordered flex items-center gap-2 w-full mb-3">
      <span class="opacity-60 text-xs">Código</span>
  <input id="op-add-scan" type="text" class="grow" maxlength="24" autocomplete="off" placeholder="Listo para escanear..." />
    </label>
    <div id="op-add-summary" class="hidden mb-3">
      <div class="text-xs font-semibold mb-1">Items (Lista para Despacho)</div>
      <div id="op-add-items" class="grid grid-cols-2 gap-1 max-h-40 overflow-auto"></div>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 mb-3">
      <label class="form-control">
        <span class="label-text text-xs">Zona (opcional)</span>
        <select id="op-add-zona" class="select select-bordered select-sm">
          <option value="">Sin zona</option>
        </select>
      </label>
      <label class="form-control">
        <span class="label-text text-xs">Sección (opcional)</span>
        <select id="op-add-seccion" class="select select-bordered select-sm" disabled>
          <option value="">Sin sección</option>
        </select>
      </label>
    </div>
    <p id="op-add-location-hint" class="text-[11px] opacity-60 mb-3"></p>
    <div class="flex items-center justify-between gap-4 mt-2">
      <button type="button" id="op-add-clear" class="btn btn-ghost btn-xs">Limpiar</button>
      <div class="flex items-center gap-3">
        <span id="op-add-msg" class="text-xs opacity-70"></span>
        <button id="op-add-confirm" class="btn btn-primary btn-sm" disabled>Mover caja</button>
      </div>
    </div>
  </div>
</dialog>

<script src="/static/js/location-selector.js?v=<%= assetVersion %>" defer></script>
<script src="/static/js/operacion.js?v=<%= assetVersion %>" defer></script>

<!-- Modal Detalle Caja (mismo diseño que vistas anteriores) -->
<div id="modal-caja-detalle" class="hidden">
  <div id="op-modal-detalle-overlay" class="fixed inset-0 bg-black/60 z-[999] isolate flex items-start justify-center py-6 md:py-10 px-2 md:px-4" data-close="detalle">
    <!-- Contenedor centrado -->
    <div class="relative w-full max-w-5xl mx-auto" data-stop-prop>
  <div class="bg-base-200/95 backdrop-blur border border-base-300/50 rounded-xl shadow-xl flex flex-col max-h-[90vh] z-[1000]" role="dialog" aria-modal="true">
        <!-- Header -->
  <div class="flex items-start justify-between gap-4 px-5 pt-4 pb-3 border-b border-base-300/40">
          <h3 id="detalle-caja-titulo" class="text-lg font-semibold">Caja</h3>
          <button class="btn btn-xs btn-ghost" data-close="detalle">✕</button>
        </div>
        <!-- Scrollable content -->
  <div class="overflow-y-auto custom-scroll px-5 pb-5 pt-4 space-y-5" id="detalle-scroll">
          <!-- Meta info -->
          <div class="grid gap-3 text-xs sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-5" id="detalle-meta">
            <div><span class="opacity-60">Nombre caja:</span> <span id="detalle-caja-lote" class="font-mono"></span></div>
            <div><span class="opacity-60">ID interno:</span> <span id="detalle-caja-id" class="font-mono"></span></div>
            <div><span class="opacity-60">Composición:</span> <span id="detalle-caja-comp"></span></div>
            <div id="detalle-caja-orden-wrap" class="space-y-1">
              <span class="opacity-60 text-xs uppercase tracking-wide">Órdenes</span>
              <div id="detalle-caja-orden" class="text-xs leading-snug space-y-1"></div>
            </div>
            <div><span class="opacity-60">Creada:</span> <span id="detalle-caja-fecha"></span></div>
          </div>
          <!-- Items grid -->
          <div>
            <div class="text-xs font-semibold mb-2 opacity-70">Componentes</div>
            <div id="detalle-caja-items" class="grid gap-3 grid-cols-1 xs:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"></div>
          </div>
          <!-- Timer box -->
            <div id="detalle-caja-timer-box"></div>
        </div>
        <!-- Footer -->
        <div class="flex justify-end gap-3 px-5 py-3 border-t border-base-300/40">
          <button class="btn btn-sm" data-close="detalle">Cerrar</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Portal + scroll lock for Operación detail modal
  (function(){
    const wrap = document.getElementById('modal-caja-detalle');
    const overlay = document.getElementById('op-modal-detalle-overlay');
    if(overlay && overlay.parentElement !== document.body){
      document.body.appendChild(overlay.parentElement);
    }
    const html = document.documentElement; const body = document.body;
    const observer = new MutationObserver(()=>{
      const open = !wrap.classList.contains('hidden');
      if(open){ html.classList.add('overflow-hidden'); body.classList.add('overscroll-contain'); }
      else { html.classList.remove('overflow-hidden'); body.classList.remove('overscroll-contain'); }
    });
    observer.observe(wrap,{attributes:true, attributeFilter:['class']});
  })();
</script>
