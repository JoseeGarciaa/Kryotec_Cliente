<% title = title || 'Operación · Operación' %>
<div class="mb-6">
  <h1 class="text-2xl font-bold">Gestión de Operación</h1>
</div>

<!-- Bloque: Cajas en Operación -->
<div class="card border border-info/20 bg-info/5 mb-8">
  <div class="card-body p-0">
    <div class="flex items-center justify-between px-5 pt-4 pb-3 flex-wrap gap-3">
      <div>
        <div class="font-semibold text-lg flex items-center gap-2">Cajas en Operación <span id="op-spin" class="loading loading-spinner loading-xs hidden"></span></div>
        <div id="op-count" class="text-sm opacity-70">(0 de 0)</div>
      </div>
      <div class="flex gap-2 items-center">
        <button id="op-btn-add" class="btn btn-primary btn-sm" type="button">Agregar Items</button>
      </div>
    </div>
    <div class="px-5 pb-4">
      <label class="input input-bordered flex items-center gap-2 w-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-70" viewBox="0 0 24 24" fill="currentColor"><path d="M10 2a8 8 0 105.293 14.293l4.207 4.207a1 1 0 001.414-1.414l-4.207-4.207A8 8 0 0010 2zm0 2a6 6 0 110 12A6 6 0 0110 4z"/></svg>
        <input id="op-filter" type="text" class="grow" placeholder="Buscar por lote o RFID..." />
      </label>
    </div>
    <div class="overflow-x-auto border-t border-info/10">
      <table class="table table-xs sm:table-sm" id="op-table">
        <thead>
          <tr>
            <th>RFID</th>
            <th class="hidden md:table-cell">NOMBRE</th>
            <th class="hidden lg:table-cell">ESTADO</th>
            <th>CAJA</th>
            <th>CRONÓMETRO</th>
            <th class="hidden md:table-cell">ROL</th>
          </tr>
        </thead>
        <tbody id="op-tbody">
          <tr><td colspan="6" class="text-center py-6 text-xs opacity-50">Cargando...</td></tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Bloque: Cajas Completadas -->
<div class="card border border-success/20 bg-success/5 mb-8">
  <div class="card-body p-0">
    <div class="flex items-center justify-between px-5 pt-4 pb-3 flex-wrap gap-3">
      <div>
        <div class="font-semibold text-lg flex items-center gap-2">Cajas Completadas</div>
        <div id="op-count-done" class="text-sm opacity-70">(0)</div>
      </div>
    </div>
    <div class="overflow-x-auto border-t border-success/10">
      <table class="table table-xs sm:table-sm" id="op-table-done">
        <thead>
          <tr>
            <th>CAJA</th>
            <th>FINALIZADO</th>
            <th>ITEMS</th>
          </tr>
        </thead>
        <tbody id="op-tbody-done">
          <tr><td colspan="3" class="text-center py-6 text-xs opacity-50">Sin datos</td></tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Modal Agregar a Operación (compose caja style) -->
<dialog id="op-modal-add" class="modal">
  <div class="modal-box max-w-3xl">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
    </form>
    <h3 class="font-bold text-lg mb-1">Armar caja (1 CUBE · 1 VIP · 6 TIC Atemperadas)</h3>
    <p class="text-xs opacity-70 mb-4">Escanea RFIDs (auto‑detección de rol). Composición requerida: <strong>6 TIC Atemperadas · 1 VIP · 1 CUBE</strong>.</p>
    <!-- Scan input -->
    <label class="input input-bordered flex items-center gap-2 w-full mb-4">
      <span class="opacity-60 text-xs">RFID</span>
      <input id="op-add-scan" type="text" class="grow" maxlength="24" autocomplete="off" placeholder="Listo para escanear..." />
    </label>
    <!-- Counters -->
    <div class="flex flex-wrap gap-3 mb-4" id="op-add-counters">
      <div class="flex-1 min-w-[110px] p-3 border rounded-lg bg-base-200/40" data-role-box="tic">
        <div class="text-xs font-semibold mb-1">TICs</div>
        <div class="text-sm"><span id="op-add-count-tic">0</span> / 6</div>
      </div>
      <div class="flex-1 min-w-[110px] p-3 border rounded-lg bg-base-200/40" data-role-box="vip">
        <div class="text-xs font-semibold mb-1">VIP</div>
        <div class="text-sm"><span id="op-add-count-vip">0</span> / 1</div>
      </div>
      <div class="flex-1 min-w-[110px] p-3 border rounded-lg bg-base-200/40" data-role-box="cube">
        <div class="text-xs font-semibold mb-1">CUBE</div>
        <div class="text-sm"><span id="op-add-count-cube">0</span> / 1</div>
      </div>
    </div>
    <!-- Timer config -->
    <div class="mb-4 border rounded-lg p-4 bg-base-200/30">
      <div class="text-xs font-semibold mb-2">CRONÓMETRO DE CAJA (REQUERIDO)</div>
      <div class="grid grid-cols-2 gap-3 mb-2">
        <label class="form-control w-full">
          <span class="label-text text-xs opacity-70">Horas</span>
          <input id="op-add-hrs" type="number" min="0" class="input input-bordered input-sm" placeholder="Ej. 0" />
        </label>
        <label class="form-control w-full">
          <span class="label-text text-xs opacity-70">Minutos</span>
          <input id="op-add-min" type="number" min="0" max="59" class="input input-bordered input-sm" placeholder="Ej. 30" />
        </label>
      </div>
      <p class="text-[11px] opacity-70">Debes indicar una duración > 0. El cronómetro iniciará automáticamente al crear la caja.</p>
    </div>
    <!-- Selected items list -->
    <div id="op-add-summary" class="hidden mb-4">
      <div class="text-xs font-semibold mb-1">Items detectados</div>
      <div id="op-add-items" class="flex flex-wrap gap-1 max-h-32 overflow-auto"></div>
    </div>
    <div class="flex items-center justify-between gap-4">
      <button type="button" id="op-add-clear" class="btn btn-ghost btn-xs">Limpiar</button>
      <div class="flex items-center gap-3">
        <span id="op-add-msg" class="text-xs opacity-70"></span>
        <button id="op-add-confirm" class="btn btn-primary btn-sm" disabled>Crear caja</button>
      </div>
    </div>
  </div>
</dialog>

<script src="/static/js/operacion.js?v=<%= assetVersion %>" defer></script>
