<% title = title || 'Operación · En bodega' %>
<div class="space-y-5">
  <div class="flex flex-col gap-2">
    <h1 class="text-2xl font-bold tracking-tight">En bodega</h1>
    <p class="text-sm opacity-70">Items disponibles (estado <span class="font-mono">'En bodega'</span>).</p>
  </div>

  <div class="card border border-base-300/40 shadow-sm bg-base-200/50">
    <div class="card-body pt-5 md:pt-6">
      <form id="form-filtros" class="grid gap-4 md:gap-5 w-full sm:grid-cols-2 lg:grid-cols-5 items-end">
        <label class="form-control w-full">
          <span class="label-text text-xs">Buscar</span>
          <input name="q" id="f-q" class="input input-sm input-bordered" placeholder="RFID / nombre / lote" />
        </label>
        <label class="form-control w-full max-w-xs">
          <span class="label-text text-xs">Categoría</span>
          <select name="cat" id="f-cat" class="select select-sm select-bordered">
            <option value="">Todas</option>
            <option value="tics">TICs</option>
            <option value="vips">VIPs</option>
            <option value="cubes">Cubes</option>
          </select>
        </label>
        <div class="flex gap-3 sm:col-span-2 lg:col-span-2 xl:col-span-1">
          <button class="btn btn-primary btn-sm w-full sm:w-auto" type="submit">Filtrar</button>
          <button id="btn-clear" type="button" class="btn btn-ghost btn-sm w-full sm:w-auto">Limpiar</button>
        </div>
        <div class="lg:col-span-2 hidden xl:block"></div>
      </form>
      <!-- Grid (mobile) -->
      <div id="bodega-cards" class="mt-6 grid gap-3 sm:grid-cols-2 md:hidden"></div>
      <!-- Tabla (desktop) -->
      <div class="mt-6 overflow-x-auto border border-base-300/40 rounded-xl bg-base-100/60 hidden md:block">
        <table class="table table-xs sm:table-sm" id="tabla-bodega">
          <thead class="bg-base-200/70 text-xs uppercase tracking-wide">
            <tr>
              <th class="min-w-[150px]">RFID</th>
              <th class="min-w-[140px]">Nombre</th>
              <th class="w-28 hidden lg:table-cell">Lote</th>
              <th class="w-24">Categoría</th>
              <th class="w-32 hidden md:table-cell">Sub estado</th>
              <th class="min-w-[150px] hidden xl:table-cell">Ingreso</th>
            </tr>
          </thead>
          <tbody class="align-top text-sm"></tbody>
        </table>
      </div>
      <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-3 mt-5" id="paginacion">
        <div class="text-xs opacity-70 order-2 sm:order-1" id="info-total"></div>
        <div class="order-1 sm:order-2 flex items-center gap-2">
          <div class="join">
            <button class="join-item btn btn-xs" id="btn-prev" type="button">«</button>
            <button class="join-item btn btn-xs" id="btn-next" type="button">»</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/static/js/bodega.js?v=<%= assetVersion %>" defer></script>
