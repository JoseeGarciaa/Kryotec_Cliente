<% title = title || 'Operación · Acondicionamiento' %>

<div class="mb-6">
  <h1 class="text-2xl font-bold">Gestión de Acondicionamiento</h1>
</div>

<!-- Bloque: Ensamblaje -->
<div class="card border border-error/20 bg-error/5 mb-8">
  <div class="card-body p-0">
  <div class="flex items-center justify-between px-5 pt-4 pb-3 flex-wrap gap-3 acond-header-actions">
      <div>
  <div class="font-semibold text-lg flex items-center gap-2">Items en Ensamblaje <span id="spin-acond" class="loading loading-spinner loading-xs hidden"></span></div>
        <div id="count-ensam" class="text-sm opacity-70">(0 de 0)</div>
      </div>
      <div class="flex gap-2 items-center">
        <div class="flex bg-base-300/20 rounded-xl overflow-hidden">
          <button id="btn-view-cards" type="button" class="btn btn-ghost btn-xs !rounded-none !rounded-l-xl" title="Vista tarjetas">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-5 h-5" fill="currentColor"><path d="M3 5h7v7H3V5zm0 9h7v5H3v-5zm11-9h7v5h-7V5zm0 7h7v7h-7v-7z"/></svg>
          </button>
          <button id="btn-view-text" type="button" class="btn btn-ghost btn-xs !rounded-none !rounded-r-xl" title="Vista texto">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-5 h-5" fill="currentColor"><path d="M4 6h16v2H4V6zm0 5h16v2H4v-2zm0 5h10v2H4v-2z"/></svg>
          </button>
        </div>
      <button id="btn-add-ensam" class="btn btn-primary btn-sm md:btn-md gap-2" type="button">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-4 h-4" fill="currentColor"><path d="M11 11V5a1 1 0 1 1 2 0v6h6a1 1 0 1 1 0 2h-6v6a1 1 0 1 1-2 0v-6H5a1 1 0 1 1 0-2h6Z"/></svg>
        Agregar Items
      </button>
      </div>
    </div>
    <div class="px-5 pb-4">
      <label class="input input-bordered flex items-center gap-2 w-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-70" viewBox="0 0 24 24" fill="currentColor"><path d="M10 2a8 8 0 105.293 14.293l4.207 4.207a1 1 0 001.414-1.414l-4.207-4.207A8 8 0 0010 2zm0 2a6 6 0 110 12A6 6 0 0110 4z"/></svg>
        <input id="search-ensam" type="text" class="grow" placeholder="Buscar por RFID, nombre o lote..." />
      </label>
    </div>
    <div class="px-3 sm:px-5 pb-5 acond-grid-wrap" id="grid-cajas-wrapper">
      <div class="overflow-x-auto -mx-3 sm:mx-0 pb-1 custom-scroll">
        <div id="grid-cajas" class="grid grid-cols-2 xs:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3 sm:gap-4 min-w-[380px]"></div>
      </div>
    </div>
    <div class="overflow-x-auto border-t border-error/10">
      <table id="tabla-ensam" class="table table-xs sm:table-sm">
        <thead>
          <tr>
            <th>RFID</th>
            <th class="hidden md:table-cell">NOMBRE</th>
            <th class="hidden lg:table-cell">ESTADO</th>
            <th class="hidden md:table-cell">CAJA</th>
            <th>CRONÓMETRO</th>
            <th class="hidden md:table-cell">CATEGORÍA</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>

<!-- Bloque: Lista para Despacho -->
<div class="card border border-success/20 bg-success/5 mb-8">
  <div class="card-body p-0">
    <div class="flex items-center justify-between px-5 pt-4 pb-3 flex-wrap gap-3">
      <div>
  <div class="font-semibold text-lg flex items-center gap-2">Items Lista para Despacho <span id="spin-listo" class="loading loading-spinner loading-xs hidden"></span></div>
        <div id="count-listo" class="text-sm opacity-70">(0 de 0)</div>
      </div>
      <button id="btn-add-listo" class="btn btn-accent btn-sm md:btn-md gap-2" type="button">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-4 h-4" fill="currentColor"><path d="M11 11V5a1 1 0 1 1 2 0v6h6a1 1 0 1 1 0 2h-6v6a1 1 0 1 1-2 0v-6H5a1 1 0 1 1 0-2h6Z"/></svg>
        Agregar Items
      </button>
    </div>
    <div class="px-5 pb-4">
      <label class="input input-bordered flex items-center gap-2 w-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-70" viewBox="0 0 24 24" fill="currentColor"><path d="M10 2a8 8 0 105.293 14.293l4.207 4.207a1 1 0 001.414-1.414l-4.207-4.207A8 8 0 0010 2zm0 2a6 6 0 110 12A6 6 0 0110 4z"/></svg>
        <input id="search-listo" type="text" class="grow" placeholder="Buscar por RFID, nombre o lote..." />
      </label>
    </div>
    <div class="overflow-x-auto border-t border-success/10">
      <table id="tabla-listo" class="table table-xs sm:table-sm">
        <thead>
          <tr>
            <th>RFID</th>
            <th class="hidden md:table-cell">NOMBRE</th>
            <th class="hidden lg:table-cell">ESTADO</th>
            <th class="hidden md:table-cell">LOTE</th>
            <th>CRONÓMETRO</th>
            <th class="hidden md:table-cell">CATEGORÍA</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>

<script src="/static/js/acond.js?v=<%= assetVersion %>" defer></script>

<!-- Modal Ensamblaje -->
<dialog id="modal-ensam" class="modal">
  <div class="modal-box max-w-3xl">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
    </form>
    <h3 class="font-bold text-lg mb-2">Armar caja (1 CUBE · 1 VIP · 6 TIC Atemperadas)</h3>
  <div class="mb-4 text-xs opacity-70">Escanee RFIDs (auto‑detección de rol). Composición requerida: 6 TIC Atemperadas · 1 VIP · 1 CUBE.</div>
    <div id="scan-area" class="mb-4 w-full">
      <label class="input input-bordered flex items-center gap-2 w-full">
        <span class="opacity-60 text-xs">RFID</span>
        <input id="scan-box" type="text" class="grow" placeholder="Listo para escanear..." autocomplete="off" />
      </label>
  <div id="scan-hint" class="text-xs opacity-70 mt-2">Listo para escanear (auto‑detección). Faltan: 6 TIC, 1 VIP, 1 CUBE.</div>
    </div>
    <div class="grid xs:grid-cols-2 md:grid-cols-3 gap-3 md:gap-4">
      <div class="border rounded p-3 max-h-56 flex flex-col">
        <div class="font-semibold mb-1 flex items-center justify-between">TICs <span id="tic-count" class="badge">0 / 6</span></div>
        <ul id="list-tic" class="text-xs space-y-1 overflow-auto custom-scroll flex-1 min-h-0"></ul>
      </div>
      <div class="border rounded p-3 max-h-56 flex flex-col">
        <div class="font-semibold mb-1 flex items-center justify-between">VIP <span id="vip-count" class="badge">0 / 1</span></div>
        <ul id="list-vip" class="text-xs space-y-1 overflow-auto flex-1 min-h-0"></ul>
      </div>
      <div class="border rounded p-3 max-h-56 flex flex-col">
        <div class="font-semibold mb-1 flex items-center justify-between">CUBE <span id="cube-count" class="badge">0 / 1</span></div>
        <ul id="list-cube" class="text-xs space-y-1 overflow-auto flex-1 min-h-0"></ul>
      </div>
    </div>
    <div class="mt-6 border border-base-300/40 rounded-lg p-3 bg-base-200/30">
      <div class="text-xs uppercase tracking-wide opacity-60 mb-2">Cronómetro de caja (requerido)</div>
      <div class="grid grid-cols-2 gap-3">
        <label class="form-control">
          <span class="label-text text-xs">Horas</span>
          <input id="ensam-hr" type="number" min="0" step="1" placeholder="Ej. 0" class="input input-bordered input-sm" />
        </label>
        <label class="form-control">
          <span class="label-text text-xs">Minutos</span>
          <input id="ensam-min" type="number" min="0" step="1" placeholder="Ej. 30" class="input input-bordered input-sm" />
        </label>
      </div>
      <div class="text-xs opacity-60 mt-2" id="ensam-timer-hint">Debes indicar una duración &gt; 0. El cronómetro iniciará automáticamente al crear la caja.</div>
    </div>
    <div class="mt-4 flex flex-wrap gap-3 items-center">
      <button id="btn-clear-ensam" class="btn btn-ghost btn-sm" type="button">Limpiar</button>
      <button id="btn-crear-caja" class="btn btn-primary" disabled>Crear caja</button>
      <span id="msg-ensam" class="text-sm opacity-70"></span>
    </div>
  <!-- hidden input removed; usamos scan-box visible -->
  </div>
</dialog>

<!-- Modal Detalle Caja -->
<div id="modal-caja-detalle" class="hidden">
  <div class="fixed inset-0 bg-black/60 z-40 flex items-start justify-center overflow-auto py-10" data-close="detalle">
    <div class="bg-base-200 border border-base-300/50 rounded-xl shadow-xl w-full max-w-3xl p-5 relative z-50" role="dialog" aria-modal="true">
      <div class="flex items-start justify-between mb-3">
        <h3 id="detalle-caja-titulo" class="text-lg font-semibold">Caja</h3>
        <button class="btn btn-xs btn-ghost" data-close="detalle">✕</button>
      </div>
      <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-3 text-xs mb-4" id="detalle-meta">
        <div><span class="opacity-60">Nombre caja:</span> <span id="detalle-caja-lote" class="font-mono"></span></div>
        <div><span class="opacity-60">ID interno:</span> <span id="detalle-caja-id" class="font-mono"></span></div>
        <div><span class="opacity-60">Composición:</span> <span id="detalle-caja-comp"></span></div>
        <div><span class="opacity-60">Creada:</span> <span id="detalle-caja-fecha"></span></div>
      </div>
      <div id="detalle-caja-items" class="grid sm:grid-cols-2 md:grid-cols-3 gap-4 mb-2"></div>
  <div id="detalle-caja-timer-box" class="mb-4"></div>
      <div class="flex justify-end pt-2">
        <button class="btn btn-sm" data-close="detalle">Cerrar</button>
      </div>
    </div>
  </div>
</div>
