<!-- Bloque: Ensamblaje -->
<div class="card border border-error/20 bg-error/5 mb-8">
  <div class="card-body p-0">
  <div class="flex items-center justify-between px-5 pt-4 pb-3 flex-wrap gap-3 acond-header-actions">
      <div>
  <div class="font-semibold text-lg flex items-center gap-2">Items en Ensamblaje <span id="spin-acond" class="loading loading-spinner loading-xs hidden"></span></div>
        <div id="count-ensam" class="text-sm opacity-70">(0 de 0)</div>
      <script>
        // Lock body scroll when detail modal is open
        (function(){
          const modal = document.getElementById('modal-caja-detalle');
          if(!modal) return;
          const html = document.documentElement; const body = document.body;
          const observer = new MutationObserver(()=>{
            const open = !modal.classList.contains('hidden');
            if(open){ html.classList.add('overflow-hidden'); body.classList.add('overscroll-contain'); }
            else { html.classList.remove('overflow-hidden'); body.classList.remove('overscroll-contain'); }
          });
          observer.observe(modal,{attributes:true, attributeFilter:['class']});
            // Portalize overlay to end of body to bypass sidebar z-index contexts
            const overlay = document.getElementById('modal-caja-detalle-overlay');
            if(overlay && overlay.parentElement !== document.body){
              document.body.appendChild(overlay.parentElement); // move wrapper containing modal
            }
        })();
      </script>
      </div>
  <div class="flex gap-2 items-center">
  <button id="btn-add-ensam" class="btn btn-primary btn-sm md:btn-md gap-2" type="button">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-4 h-4" fill="currentColor"><path d="M11 11V5a1 1 0 1 1 2 0v6h6a1 1 0 1 1 0 2h-6v6a1 1 0 1 1-2 0v-6H5a1 1 0 1 1 0-2h6Z"/></svg>
        Agregar Items
      </button>
      </div>
    </div>
    <div class="px-5 pb-4">
      <label class="input input-bordered flex items-center gap-2 w-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-70" viewBox="0 0 24 24" fill="currentColor"><path d="M10 2a8 8 0 105.293 14.293l4.207 4.207a1 1 0 001.414-1.414l-4.207-4.207A8 8 0 0010 2zm0 2a6 6 0 110 12A6 6 0 0110 4z"/></svg>
        <input id="search-ensam" type="text" class="grow" placeholder="Buscar por RFID, nombre o lote..." />
      </label>
    </div>
    <div class="px-3 sm:px-5 pb-5 acond-grid-wrap" id="grid-cajas-wrapper">
      <div class="overflow-x-auto -mx-3 sm:mx-0 pb-1 custom-scroll">
        <div id="grid-cajas" class="grid grid-cols-2 xs:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3 sm:gap-4 min-w-[380px]"></div>
      </div>
    </div>
    <div class="overflow-x-auto border-t border-error/10">
  <table id="tabla-ensam" class="table table-xs sm:table-sm">
        <thead>
          <tr>
            <th>CAJA</th>
            <th>NOMBRE</th>
            <th class="hidden lg:table-cell">ESTADO</th>
          </tr>
        </thead>
        <tbody id="cajasTablaBody"></tbody>
      </table>
    </div>
  </div>
</div>

<!-- Bloque: Lista para Despacho -->
