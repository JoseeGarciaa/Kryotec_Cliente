<% title = 'Acceso' %>

<div class="card w-full max-w-md shadow-xl bg-base-200">
  <div class="card-body">
    <h2 class="card-title">Iniciar sesión</h2>
    <% if (error) { %>
      <div class="alert alert-error">
        <span><%= error %></span>
      </div>
    <% } %>
    <form method="post" action="/auth/login" class="space-y-3">
      <div class="form-control">
        <label class="label" for="correo">
          <span class="label-text">Correo</span>
        </label>
        <input type="email" id="correo" name="correo" class="input input-bordered" required />
      </div>
      <div class="form-control">
        <label class="label" for="password">
          <span class="label-text">Contraseña</span>
        </label>
        <input type="password" id="password" name="password" class="input input-bordered" required />
      </div>
      <div class="card-actions justify-end mt-2">
        <button type="submit" class="btn btn-primary w-full">Entrar</button>
      </div>
    </form>
  </div>
</div>
